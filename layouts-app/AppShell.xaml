<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Maui_Layouts_Studies.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Maui_Layouts_Studies"
    Shell.FlyoutBehavior="Disabled"
    Title="Maui_Layouts_Studies">

    <TabBar>
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />

        <ShellContent
            Title="TipCalculatorPage"
            ContentTemplate="{DataTemplate local:TipCalculatorPage}"
            Route="TipCalculatorPage" />
        
        <ShellContent
            Title="TipCalculatorWithGrid"
            ContentTemplate="{DataTemplate local:TipCalculatorWithGrid}"
            Route="TipCalculatorWithGrid" />
    </TabBar>

</Shell>
