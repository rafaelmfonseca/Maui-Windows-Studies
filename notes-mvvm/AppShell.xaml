<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Maui_Windows_Studies.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Maui_Windows_Studies"
    xmlns:views="clr-namespace:Maui_Windows_Studies.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="Maui_Windows_Studies">

    <TabBar>
        <ShellContent
            Title="About"
            ContentTemplate="{DataTemplate views:AboutPage}"
            Route="AboutPage" />

        <ShellContent
            Title="Note"
            ContentTemplate="{DataTemplate views:NotePage}"
            Route="NotePage" />

        <ShellContent
            Title="All notes"
            ContentTemplate="{DataTemplate views:AllNotesPage}"
            Route="AllNotesPage" />
    </TabBar>


</Shell>
